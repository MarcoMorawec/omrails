<div class="row">
	<div class="span11 offset1">
		<div class="frosty">
			<div class="span5">
				<div class= "row">
					<div class="span1">
						<div class="circle">
							<p class="radical-score">9.8</p>
						</div>
					</div>
						<div class="span3">
							<h1 class="custom-h1"><%= @pin.user.name %></h1>
						</div>
				</div>
			</div>
			<div class="row">
				<div class="span7">
				  	<%= image_tag @pin.image %>
					</p>
					<p>
				  	<h3 class="custom-h3"><%= @pin.description %> by <%= @pin.user.name %> - <%= @pin.location %></h3>
					</p>
					<% if current_user == @pin.user %>
						<%= link_to 'Edit', edit_pin_path(@pin) %> |
					<% end %>
					<%= link_to 'Back', pins_path %>
				</div>
				<div class="span4">
					<div class="image-description">
			  			<h1 class="custom-h1">Session Stats</h1>
					</div>
					<h2 class="custom-h2">Session Score</h2>
					<h2 class="custom-h2">How big was it?</h2>
						<h3 class="custom-h3">The waves were <%= @pin.SizeOfWaves %> Feet</h3>
					<h2 class="custom-h2">Surf Conditions?</h2>
						<h3 class="custom-h3"><%= @pin.SurfConditions %></h3>
					<h2 class="custom-h2">How many waves?</h2>
						<h3 class="custom-h3">I got <%= @pin.NumberOfWaves %> waves!</h3>
				</div>
			</div>
		</div>	
	</div>	
</div>


