<div class="box">
	
		<div class="img-wrap">
			<%= link_to image_tag(pin.image(:medium)), pin_path(pin) %>
			<div class="img-overlay image-description">
				<%= pin.description %>
			</div>
		</div>
	<% if (pin.NumberOfWaves && pin.SurfConditions) %>
		<h4 class="custom-h4">
			<%= pin.NumberOfWaves %> Waves || <%= pin.SurfConditions %>
		</h4>
	<% end %> 	
	<p>
		Posted by <%= link_to pin.user.name, pin.user %>
	</p>

	<%= link_to 'Show', pin %>

	<% if current_user == pin.user %>
	    <%= link_to 'Edit', edit_pin_path(pin) %>
	    <%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' } %>
	<% end %>
</div>
