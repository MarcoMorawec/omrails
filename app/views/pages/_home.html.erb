			<div class="span5 offset3">
				<div class="hero-unit frosty">
					<h2>Let's get you shredding</h2>
				</div>
			</div>
		<% else %>
			<div class="span5 offset3">
				<div class="hero-unit frosty">
					<h2>Improve your Surfing</h2>
						<p>
							Track Each Wave. Surf Better!
						</p>


						<p>
							<%= link_to "Sign up Now!", new_user_registration_path, class: "btn btn-success" %>
						</p>
				</div>
			</div>
		<% end %>
	</div>
